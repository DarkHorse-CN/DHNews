<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <attr name="visible_tab_count" format="integer" />        <!--可见Tab数量-->
    <attr name="title_size" format="integer" />                <!--标题字体大小-->
    <attr name="title_color_normal" format="color" />       <!--未选中的字体颜色-->
    <attr name="title_color_selected" format="color" />     <!--选中时的字体颜色-->
    <attr name="pointer_type" format="integer" />              <!--标题指示器的样式（0：NONE，1：Triangle，2：line）-->
    <attr name="pointer_color" format="color" />             <!--指示器颜色-->
    <attr name="pointer_width" format="integer" />             <!--指示器宽度-->
    <declare-styleable name="ViewPagerIndicator">
        <attr name="visible_tab_count" />
        <attr name="title_size" />
        <attr name="title_color_normal" />
        <attr name="title_color_selected" />
        <attr name="pointer_type" />
        <attr name="pointer_color" />
        <attr name="pointer_width" />
    </declare-styleable>

    <attr name="radius" format="dimension"/>
    <attr name="src" format="reference"/>
    <declare-styleable name="CircleImageView">
        <attr name="radius"/>
        <attr name="src"/>
    </declare-styleable>

    <style name="videp_anim">
        <item name="android:windowEnterAnimation">@anim/fade_in</item>
        <item name="android:windowExitAnimation">@anim/fade_out</item>
    </style>

</resources>
